<h1>Add Courses</h1>

<div class="row">
    <form class="col s12" action="/add" method="post">
        <div class="row">
            <div class="input-field col s12">
                <input name="title" id="title" type="text" class="validate" required>
                <label for="title">Courses title</label>
                <span class="helper-text" data-error="!wrong" data-success="right"></span>
            </div>
            <div class="input-field col s12">
                <input name="price" id="price" type="number" class="validate" required>
                <label for="price">Price</label>
                <span class="helper-text" data-error="!wrong" data-success="right"></span>
            </div>
            <div class="input-field col s12">
                <input name="image" id="image" type="text" class="validate" required>
                <label for="image">Image URL</label>
                <span class="helper-text" data-error="!wrong" data-success="right"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add courses</button>
    </form>
</div>