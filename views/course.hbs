<div class="course">
    <div class="row">
        <div class="col s6 ">
            <h1>{{course.title}}</h1>
            <div class="card">
                <div class="card-image">
                    <img src="{{course.image}}" class="img" alt="{{course.title}}">
                </div>
                <p class="price">{{course.price}}</p>
            </div>
        </div>
    </div>
</div>